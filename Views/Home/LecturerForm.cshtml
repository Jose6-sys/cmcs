@{
    var userId = Context.Request.Query["id"];
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Submit Claim - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
            <h3 class="text-center mb-3">Submit Claim</h3>
            <form method="post" enctype="multipart/form-data" action="/Claims/SubmitClaim">
                <input type="hidden" name="userId" value="@userId" />
                <div class="mb-3">
                    <label>Hours Worked</label>
                    <input name="hoursWorked" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Hourly Rate (R)</label>
                    <input name="hourlyRate" type="number" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Notes</label>
                    <textarea name="notes" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label>Upload Supporting Document</label>
                    <input name="file" type="file" class="form-control" accept=".pdf,.docx,.xlsx" />
                </div>
                <button class="btn btn-primary w-100">Submit Claim</button>

                <a class="btn btn-outline-primary mt-3" asp-action="MyClaims" asp-route-userId=
                "@ViewBag.UserId">View My Submitted Claims</a>

            </form>
        </div>
    </div>
</body>
</html>
