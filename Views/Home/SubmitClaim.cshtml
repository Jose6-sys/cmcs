@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded">
                <h2 class="text-center mb-4">Submit Claim</h2>

                <form>
                    <div class="form-group mb-3">
                        <label class="form-label">Claim ID</label>
                        <input type="text" class="form-control" placeholder="ClaimID" required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Hours Worked</label>
                        <input type="number" class="form-control" placeholder="Hours worked" required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Hourly Rate</label>
                        <input type="number" class="form-control" placeholder="Hourly rate" required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Upload Supporting Document</label>
                        <input type="file" class="form-control" />
                    </div>

                    <div class="form-group mb-4">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" placeholder="Enter claim description"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Submit Claim</button>

                    <div class="mt-3 text-center">
                        <a href="coordinator" class="btn btn-link">Go to Coordinator Page</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
