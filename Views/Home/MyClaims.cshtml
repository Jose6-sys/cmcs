@model IEnumerable<cmcs.Models.Claim>

<h2 class="mt-5 mb-3 text-center">My Submitted Claims</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">You have not submitted any claims yet.</p>
}
else
{
    <div class="row">
        @foreach (var claim in Model)
        {
            var total = claim.HoursWorked * claim.HourlyRate;
            <div class="col-md-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <h5>Hours Worked: @claim.HoursWorked</h5>
                        <p>Hourly Rate: @($"R {claim.HourlyRate:F2}")</p>
                        <p>Total: @($"R {total:F2}")</p>
                        <p>Notes: @(string.IsNullOrEmpty(claim.Notes) ? "—" : claim.Notes)</p>
                        <strong>Status:</strong>
                        <span class="badge bg-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "secondary")">
                            @claim.Status
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
}
